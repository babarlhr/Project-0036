<odoo>
    <record id="view_order_inherit_form" model="ir.ui.view">
        <field name="name">order.inherit.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree[1]/field[@name='name']" position="after">
                <field name="employee_id"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/form[1]/group[1]/group[1]/field[@name='product_id']" position="after">
                <field name="employee_id"/>
            </xpath>
            <xpath expr="//notebook/page[1]" position="after">
                <page string="Packs">
                    <field name="pack_ids">
                        <tree editable="bottom">
                            <field name="sale_order_line_id"/>
                            <field name="product_id"/>
                            <field name="product_uom"/>
                            <field name="product_uom_qty"/>
                            <field name="iface_mandatory"/>
                            <field name="stock_picking_id"/>
                            <field name="stock_move_id"/>
                        </tree>
                    </field>
                </page>
                <page string="Jobs">
                    <field name="job_ids">
                        <tree editable="bottom">
                            <field name="sale_order_line_id"/>
                            <field name="barcode"/>
                            <field name="product_job_id"/>
                            <field name="number_of_employee"/>
                            <button name="%(jakc_salon_mgmt.act_add_workorder_employee)d"
                                    string="Add Employee"
                                    icon="fa-users"
                                    type="action"
                                    class="oe_highlight"/>
                             <button name="trans_close"
                                    string="Close"
                                    icon="fa-check-circle-o"
                                    type="object"
                                    class="oe_highlight"
                                    confirm="Are you sure to close the job?"/>
                            <field name="state"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <record id="view_sale_order_job_form" model="ir.ui.view">
        <field name="name">sale.order.job.form</field>
        <field name="model">sale.order.job</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="product_job_id"/>
                    <field name="barcode"/>
                    <field name="number_of_employee"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="state"/>
                </group>
                <notebook>
                    <page string="Employees">
                        <field name="job_employee_ids">
                            <tree>
                                <field name="employee_id"/>
                                <field name="state"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </form>
        </field>
    </record>

</odoo>