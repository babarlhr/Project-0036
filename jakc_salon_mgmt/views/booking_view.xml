<odoo>
    <record id="view_appointment_form" model="ir.ui.view">
        <field name="name">appointment.form</field>
        <field name="model">appointment</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="partner_id"/>
                    <field name="date_appointment"/>
                    <field name="company_id"/>
                    <field name="employee_id"/>
                </group>
            </form>
        </field>
    </record>

    <record id="view_appointment_tree" model="ir.ui.view">
        <field name="name">appointment.tree</field>
        <field name="model">appointment</field>
        <field name="arch" type="xml">
            <tree>
                <field name="partner_id"/>
                <field name="date_appointment"/>
                <field name="company_id"/>
                <field name="employee_id"/>
            </tree>
        </field>
    </record>

    <record id="view_appointment_calendar" model="ir.ui.view">
        <field name="name">appointment.calendar</field>
        <field name="model">appointment</field>
        <field name="arch" type="xml">
            <calendar display="[partner_id], Booking for [employee_id] at [company_id]" color="partner_id" date_start="date_appointment">
                <field name="partner_id"/>
                <field name="company_id"/>
                <field name="employee_id"/>
            </calendar>
        </field>
    </record>

    <record model="ir.actions.act_window" id="act_appointment">
        <field name="name">Appointment</field>
        <field name="res_model">appointment</field>
        <field name="view_type">form</field>
        <field name="view_mode">calendar,tree,form</field>
        <field name="view_id" ref="view_appointment_calendar"/>
    </record>

     <menuitem id="menu_appointment_appointment" parent="base.salon_appointment_menu" action="act_appointment" sequence="1" />

</odoo>